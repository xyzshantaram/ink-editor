  "compilerOptions": {
    "allowJs": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "module": "NodeNext",
    "target": "ESNext",
    "declaration": true,
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*"
  ]
}