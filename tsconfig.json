{
  "compilerOptions": {
    "allowJs": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ESNext",
      "ESNext.Array"
    ],
    "module": "ESNext",
    "target": "ESNext",
    "declaration": true,
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./ts-output"
  },
  "include": [
    "./src/**/*"
  ]
}